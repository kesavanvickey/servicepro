@using ServicePro.BAL;
@using ServicePro
@model UserMaster
@{
    ViewBag.Title = "Index";
}

<!-- jQuery 2.2.3 -->
<script src="/UI/plugins/jQuery/jquery-2.2.3.min.js"></script>
<script src="~/Scripts/ServicePro/UserMaster.js"></script>

<input type="hidden" id="hdUserMaster_ID" value="@Model.UserMaster_ID" />
<input type="hidden" id="hdEmployeeMaster_ID" value="@Model.EmployeeMaster_ID" />
<input type="hidden" id="hdRollType" value="@Model.RollType" />
<input type="hidden" id="hdIsActive" value="@Model.IsActive" />


<div class="container-fluid">
    <div class="col-md-offset-2 col-md-8 col-sm-12" style="padding-top:80px;">
        <div class="row form-group">
            <div class="col-sm-3">
                <label class="control-label">
                    Employee
                </label>
            </div>
            <div class="col-sm-8">
                <select id="Employee" style="width:100%;" />
            </div>
        </div>
        <div>
            <div>
                <select />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label class="control-label">
                    UserName
                </label>
            </div>
            <div class="col-sm-8">
                <input type="text" value="@Model.UserName" class="form-control" id="UserName">
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label class="control-label">
                    Password
                </label>
            </div>
            <div class="col-sm-8">
                <input type="text" value="@Model.Password" class="form-control" id="Password">
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label class="control-label">
                    Roll Type
                </label>
            </div>
            <div class="col-sm-8">
                <select id="RollType" style="width:100%;" />
            </div>
        </div>
        <div>
            <div>
                <select />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label class="control-label">
                    Active
                </label>
            </div>
            <div class="col-sm-8">
                <input type="checkbox" class="checkbox" id="IsActive" />
            </div>
        </div>
    </div>
</div>

<!-- User Master Grid Starts here -->
<div class="container-fluid fill" id="UserMasterGridList" style="display:none;">
    <br />
    <div class="row">
        <div class="col-md-offset-8 col-md-4">
            <div class="input-group">
                <input type="text" id="searchUserMaster" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button type="button" id="btnSearchUserMaster" class="btn btn-default">Search</button>
                </span>
            </div>
        </div>
    </div>
    <br />
    <table id="UserMasterGrid" data-source="@Url.Action("GetUserMasterGrid")"></table>
</div>
