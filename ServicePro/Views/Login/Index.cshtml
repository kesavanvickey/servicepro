@{
    ViewBag.Title = "Index";
    <script src="~/Scripts/Master/Login.js"></script>
}

<div class="login-box">
    <div class="login-box-body">
        <p class="login-box-msg">Sign in</p>
        <div class="form-group has-feedback">
            <input type="text" id="UserId" class="form-control" tabindex="1" placeholder="UserId">
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="password" id="Password" class="form-control" tabindex="2" onkeypress="handle(event)" placeholder="Password">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <select id="UserType" class="form-control" tabindex="3">
                <option value="1">Employee</option>
                <option value="2">Admin</option>
            </select>
        </div>
        <div class="row">
            <div class="col-xs-8">
                @*<a href="#" tabindex="5">Forget Password</a><br>*@
            </div>
            <div class="col-xs-offset-8 col-xs-4">
                <button onclick="Login();" tabindex="4" class="btn btn-primary btn-block btn-flat">Sign In</button>
            </div>
        </div>
    </div>
</div>

