@using ServicePro.BAL;
@model WorkOrderMaster
@{
    ViewBag.Title = "Index";
}

<!-- jQuery 2.2.3 -->
<script src="/UI/plugins/jQuery/jquery-2.2.3.min.js"></script>
<script src="~/Scripts/ServicePro/WorkOrderMaster.js"></script>

<input type="hidden" id="hdWorkOrderMaster_ID" value="@Model.WorkOrderMaster_ID" />
<input type="hidden" id="hdServiceItem" value="@Model.ServiceItemDetail.ServiceItemMaster_ID" />
<input type="hidden" id="hdWorkCodeTemplate" value="@Model.WorkCodeTemplate" />
<input type="hidden" id="hdServiceItemDetail_ID" value="@Model.ServiceItemDetail_ID" />
<input type="hidden" id="hdIsActive" value="@Model.IsActive" />
<input type="hidden" id="hdStatusType" value="@Model.ServiceItemDetail.StatusType" />
<input type="hidden" id="hdCheckBox" value="false"/>
<input type="hidden" id="hdItemReceivedHandler" value="@Model.ItemReceivedHandler" />
<input type="hidden" id="hdServiceStartDate" value="@Model.ServiceStartDate" />
<input type="hidden" id="hdServiceEndDate" value="@Model.ServiceEndDate" />


<div class="container-fluid">
    <div class="col-md-offset-2 col-md-8 col-sm-12" style="padding-top:80px;">
        <div class="container-fluid" id="showItemReceived" style="background-color:white;margin:10px;display:none;">
            <div style="text-align: center; color: red;">
                <div class="btn" onclick="GoToItemReceived()">This Item has Received</div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label class="control-label">
                    ServiceItem
                </label>
            </div>
            <div class="col-sm-8">
                <select id="ServiceItem" onchange="onChangeServiceItem(this)" style="width:100%;" />
            </div>
        </div>
        <div>
            <div>
                <select />
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="col-md-12" id="ServiceItemDisplay" style="display:none;">

        <!-- ServiceItemDetail Grid Starts here -->
        <div class="fill">
            <table id="ServiceItemDetailGrid" data-source="@Url.Action("GetServiceItemMasterGrid")"></table>
        </div>
    </div>
    <div class="col-md-offset-2 col-md-8 col-sm-12" style="padding-top: 80px; display: none;" id="ServiceItemOthers">
        <div class="row form-group">
            <div class="col-sm-3">
                <label class="control-label">
                    Status Type
                </label>
            </div>
            <div class="col-sm-8">
                <select id="StatusType" style="width:100%;" />
            </div>
        </div>
        <div>
            <div>
                <select />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label class="control-label">
                    Service Start Date
                </label>
            </div>
            <div class="col-sm-8">
                <div class="input-group col-sm-12">
                    <input class="form-control flatpickr" id="ServiceStartDate" type="text" value="">
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label class="control-label">
                    Service End Date
                </label>
            </div>
            <div class="col-sm-8">
                <div class="input-group col-sm-12">
                    <input class="form-control flatpickr" id="ServiceEndDate" type="text" value="">
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label class="control-label">
                    Active
                </label>
            </div>
            <div class="col-sm-8">
                <input type="checkbox" class="checkbox" id="IsActive" />
            </div>
        </div>
    </div>
</div>


<!-- WorkOrder Grid Starts here -->
<div class="container-fluid fill" id="WorkOrderMasterList" style="display:none;">
    <br />
    <div class="row">
        <div class="col-md-offset-8 col-md-4">
            <div class="input-group">
                <input type="text" id="searchWorkOrderMaster" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button type="button" id="btnSearchWorkOrderMaster" class="btn btn-default">Search</button>
                </span>
            </div>
        </div>
    </div>
    <br />
    <table id="WorkOrderMasterGrid" data-source="@Url.Action("GetWorkOrderMasterGrid")"></table>
</div>

<script>
    $(document).ready(function () {

    });
</script>