@using ServicePro.BAL;
@using ServicePro
@model AdditionalColumnMaster
@{
    ViewBag.Title = "Index";
}

<!-- jQuery 2.2.3 -->
<script src="/UI/plugins/jQuery/jquery-2.2.3.min.js"></script>
<script src="~/Scripts/Master/AdditionalColumnMaster.js"></script>

<input type="hidden" id="hdIsActive" value="@Model.IsActive" />
<input type="hidden" id="hdCompanyMaster_ID" value="@Global.CompanyId" />
<input type="hidden" id="hdAdditionalColumnMaster_ID" value="@Model.AdditionalColumnMaster_ID" />
<input type="hidden" id="hdTableName" value="@Model.TableName" />
<input type="hidden" id="hdAdditionalColumnName" value="@Model.AdditionalColumnName" />
<input type="hidden" id="hdDataType" value="@Model.DataType" />


<div class="container-fluid">
    <div class="col-md-offset-2 col-md-8 col-sm-12" style="padding-top:80px;">
        <div class="row form-group container-fluid">
            <div class="col-sm-3">
                <label class="control-label">
                    TableName
                </label>
            </div>
            <div class="col-sm-8">
                <select id="cboTableName" style="width:100%;" />
            </div>
        </div>
        <div>
            <div>
                <select /> 
            </div>
        </div>
        <div class="row form-group container-fluid">
            <div class="col-sm-3">
                <label class="control-label">
                    AdditionalColumn Name
                </label>
            </div>
            <div class="col-sm-8">
                <select id="cboAdditionalColumnName" style="width:100%;" />
            </div>
        </div>
        <div>
            <div>
                <select />
            </div>
        </div>
        <div class="row form-group container-fluid">
            <div class="col-sm-3">
                <label class="control-label">
                    Display Type
                </label>
            </div>
            <div class="col-sm-8">
                <input type="text" value="@Model.DisplayName" class="form-control" id="DisplayName">
            </div>
        </div>
        <div class="row form-group container-fluid">
            <div class="col-sm-3">
                <label class="control-label">
                    DataType
                </label>
            </div>
            <div class="col-sm-8">
                <select id="cboDataType" style="width:100%;" />
            </div>
        </div>
        <div>
            <div>
                <select />
            </div>
        </div>
        <div class="row form-group container-fluid">
            <div class="col-sm-3">
                <label class="control-label">
                    Active
                </label>
            </div>
            <div class="col-sm-8">
                <input type="checkbox" class="checkbox" id="IsActive" />
            </div>
        </div>
    </div>
</div>


<div class="container-fluid fill" id="AdditionalColumnGridList" style="display:none;">
    <br />
    <div class="row">
        <div class="col-md-offset-8 col-md-4">
            <div class="input-group">
                <input type="text" id="searchAdditionalColumn" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button type="button" id="btnSearchAdditionalColumn" class="btn btn-default">Search</button>
                </span>
            </div>
        </div>
    </div>
    <br />
    <table id="AdditionalColumnGrid" data-source="@Url.Action("GetAdditionalColumnGrid")"></table>
</div>

